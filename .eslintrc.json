{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
    "@typescript-eslint/camelcase": "off",
    "prettier/prettier": "warn",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  }
}
